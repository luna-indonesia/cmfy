{
  "compilerOptions": {
    "isolatedModules": true,
    "lib": ["ES2020"],
    "module": "ESNext",
    "noEmit": true,
    "target": "ES2020",
    "composite": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}